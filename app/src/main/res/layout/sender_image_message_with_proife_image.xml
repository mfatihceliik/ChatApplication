<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mfatihceliik.chatapplication.ui.customViews.sender.SenderProfileView
        android:id="@+id/profileView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="@dimen/message_item_space_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <com.mfatihceliik.chatapplication.ui.customViews.sender.SenderImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/message_item_space_8dp"
        app:layout_constraintEnd_toStartOf="@+id/profileView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>